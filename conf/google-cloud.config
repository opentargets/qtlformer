executor.name = 'google-batch'

google {
    enableRequesterPaysBuckets = true
    location                   = 'europe-west1'
    project                    = 'open-targets-genetics-dev'
    batch {
        spot            = true
        maxSpotAttempts = 1
    }
}

workDir = 'gs://eqtl_catalogue_processed_otar_internal_data/otar2077/GTEx_v10_majiq/gentropy/nf/work'
params {
    susie_dir    = "gs://eqtl_catalogue_processed_otar_internal_data/otar2077/GTEx_v10_majiq/susie"
    sumstats_dir = "gs://eqtl_catalogue_processed_otar_internal_data/otar2077/GTEx_v10_majiq/sumstats"
    output_dir   = "gs://eqtl_catalogue_processed_otar_internal_data/otar2077/GTEx_v10_majiq/gentropy/output"
    metadata     = "https://raw.githubusercontent.com/eQTL-Catalogue/eQTL-Catalogue-resources/refs/heads/master/data_tables/dataset_metadata_upcoming.tsv"
}

timeline {
    enabled = true
    file    = "${params.output_dir}/pipeline_info/execution_timeline/execution_timeline_${params.trace_report_suffix}.html"
}
report {
    enabled = true
    file    = "${params.output_dir}/pipeline_info/execution_report/execution_report_${params.trace_report_suffix}.html"
}
trace {
    enabled = true
    file    = "${params.output_dir}/pipeline_info/execution_trace/execution_trace_${params.trace_report_suffix}.txt"
}
dag {
    enabled = true
    file    = "${params.output_dir}/pipeline_info/pipeline_dag/pipeline_dag_${params.trace_report_suffix}.html"
}

process {
    withLabel: manifest {
        container   = 'ghcr.io/opentargets/qtlformer:0.3.7'
        machineType = "n1-standard-2"
        time        = "10m"
        maxRetries  = 1
        disk        = '2.GB'
    }

    // Exitcode 1 indicates that disk was full
    withLabel: transform {
        container     = 'ghcr.io/opentargets/qtlformer:0.3.7'
        machineType   = "n1-standard-4"
        cpus          = 5
        memory        = 15.GB
        time          = { 30.m * task.attempt }
        maxRetries    = 4
        disk          = { 5.GB + (task.attempt * 10.GB) }
        errorStrategy = { task.exitStatus in [1] ? 'retry' : 'terminate' }
    }
    // Required for Spark (as it can not read symlinks)
    withLabel: spark {
        stageInMode = 'copy'
    }
}
